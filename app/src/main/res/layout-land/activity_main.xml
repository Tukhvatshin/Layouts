<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46EFDF"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46EFDF"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#535357"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultField"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:background="#101010"
                android:textAlignment="textEnd"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tech_clc"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/_C"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPlMn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/plMn"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonProcent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/procent"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FF9800"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/share"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FF9800"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/_X"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FF9800"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/minus"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FF9800"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/plus"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/five_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourth_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:text="@string/_0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTchk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#E1DEDE"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/tchk"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FF9800"
                android:gravity="center"
                android:onClick="onOperationClick"
                android:text="@string/equally"
                android:textColor="#FBFAFA"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/six_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/five_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal">

        <Button
            android:id="@+id/buttonVG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E1DEDE"
            android:gravity="center"
            android:onClick="onNumberClick"
            android:text="@string/buttonGone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tech_clc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/result_layout"
            android:layout_gravity="end|top"
            android:background="#535357"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/resultI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="@string/_i"
                android:textColor="#FBFAFA" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>



